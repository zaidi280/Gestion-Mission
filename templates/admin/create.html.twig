{% extends 'admin/temp.html.twig' %}

{% block title %}Ajouter un employe
{% endblock %}

{% block body %}
<style>
	h2,
	.icon {
		color: #5781CC;
	}
	h2 {
		border-bottom: 3px solid #5781CC;
		padding-bottom: 10px;
	}
</style>
<h2>
	<span>
		<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-person-add" viewbox="0 0 19 19">
			<path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7Zm.5-5v1h1a.5.5 0 0 1 0 1h-1v1a.5.5 0 0 1-1 0v-1h-1a.5.5 0 0 1 0-1h1v-1a.5.5 0 0 1 1 0Zm-2-6a3 3 0 1 1-6 0 3 3 0 0 1 6 0ZM8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4Z"/>
			<path d="M8.256 14a4.474 4.474 0 0 1-.229-1.004H3c.001-.246.154-.986.832-1.664C4.484 10.68 5.711 10 8 10c.26 0 .507.009.74.025.226-.341.496-.65.804-.918C9.077 9.038 8.564 9 8 9c-5 0-6 3-6 4s1 1 1 1h5.256Z"/>
		</svg>
	</span>
	Ajouter un employé</h2>
<br>
{{ form_start(formMission) }}
{{ form_row(formMission.Nom_Prenom) }}
{{ form_row(formMission.NumTell,{ label: 'Numéro de téléphone', 'help': 'Le numéro de téléphone doit avoir exactement 8 entier' }) }}
{{ form_row(formMission.NumFax,{ label: 'Numéro de Fax', 'help': 'Le numéro de Fax doit avoir exactement 8 entier' }) }}
{{ form_row(formMission.numcarte,{ label: 'Numéro de carte d\'identité nationale', 'help': 'Le numéro de la carte doit avoir exactement 8 entier' }) }}
	{{ form_row(formMission.numcompte,{ label: 'Numéro de compte courant', 'help': 'Le numéro de compte courant doit avoir exactement 20 entier' }) }}
	{{ form_row(formMission.profession) }}
	{{ form_row(formMission.departement) }}


	<button type="submit" class="btn btn-primary">Ajouter</button>
	{{ form_end(formMission) }}
{% endblock %}
