{% extends 'admin/temp.html.twig' %}

{% block title %}{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css') }}">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
{% endblock %}

{% block body %}
	<style>
		h2,
		.icon {
			color: #5781CC;
		}
		h2 {
			border-bottom: 3px solid #5781CC;
			padding-bottom: 10px;
		}
	</style>


	<h2>
		<span class="icon">
			<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-card-checklist" viewbox="0 0 19 19">
				<path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
				<path d="M7 5.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0zM7 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 0 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0z"/>
			</svg>
		</span>Liste Des Utilisateurs</h2>
	<br>
	<table class="table table-hover">
		<thead>
			<tr class="table-primary" align="center">
				<th>Nom Prenom</th>
				<th>NumTell</th>
				<th>NumFax</th>
				<th>Compte</th>


			</tr>
		</thead>
		<tbody class="table-group-divider" align="center">
			{% for Miss in Mission %}
				{% if Miss.user != null %}
					<tr align="center">
						<td>
							{{Miss.NomPrenom}}
						</td>
						<td class="table-light">
							{{Miss.NumTell}}
						</td>
						<td>
							{{Miss.NumFAX}}
						</td>

						<td class="table-light">

							{{Miss.user.email}}

						</td>
					{% endif %}
				{% endfor %}
			</td>
		</tbody>
	</tr>


</table>{% endblock %}
