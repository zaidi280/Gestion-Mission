{% extends 'admin/temp.html.twig' %}

{% block title %}{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css') }}">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
{% endblock %}

{% block body %}
	<style>
		h2,
		.icon {
			color: #5781CC;
		}
		h2 {
			border-bottom: 3px solid #5781CC;
			padding-bottom: 10px;
		}
	</style>


	<h2>
		<span class="icon">
			<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-person-dash" viewbox="0 0 19 19">
				<path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7ZM11 12h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1 0-1Zm0-7a3 3 0 1 1-6 0 3 3 0 0 1 6 0ZM8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4Z"/>
				<path d="M8.256 14a4.474 4.474 0 0 1-.229-1.004H3c.001-.246.154-.986.832-1.664C4.484 10.68 5.711 10 8 10c.26 0 .507.009.74.025.226-.341.496-.65.804-.918C9.077 9.038 8.564 9 8 9c-5 0-6 3-6 4s1 1 1 1h5.256Z"/>
			</svg>
		</span>Modifier un compte
	</h2>
	<br>
	<table class="table table-hover">
		<thead>
			<tr class="table-primary" align="center">


				<th>email</th>
				<th>role</th>
				<th>Action</th>

			</tr>
		</thead>
		<tbody class="table-group-divider" align="center">
			{% for Miss in user %}
				<tr align="center">

					<td>

						{{Miss.email}}
					</td>
					<td class="table-light">
						{% for r in Miss.roles %}
							{{r }}/
						{% endfor %}

					</td>

					<td>
						{% if is_granted('ROLE_ADMIN') %}

							<a href="{{ path('user_edit',{id: Miss.id})}}" class="btn btn-primary">
								<i class="fas fa-pencil-alt"></i>
								Modifier</a>
						{% endif %}
					</td>

				</tr>
			{% endfor %}

		</tbody>
	</table>
{% endblock %}
